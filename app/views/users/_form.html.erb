
  <%= form_with(model: user, local: true, class: "new-user-container") do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h1 class="new-h1">New User</h1>
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class: "form-control" %>

      <br>

      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>

      <br>

      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
      <br>
      <div class="is-admin">
        <%= form.label :is_admin %>
        <%= form.check_box :is_admin, class: "text-field" %>
      </div>

  
    <div class="actions">
      <%= form.submit class: "new-user-btn" %>
    </div>
  <% end %>
